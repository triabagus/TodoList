<% include layout/header %>

<div class="containers">
    <h3>App Gmail</h3>
    <!-- <h4>App Gmail Mobile</h4> -->

    <div id="frame">
        <div class="add" data-toggle="modal" data-target="#addModal">
            <span>+</span>
        </div>
        <div class="button">
            <div class="delete" id="deleteData">
                Delete
            </div>
        </div>


        <div id="demo" class="list-gmail">

            <% heros.forEach( function (element) { %>
            <div class="list">
                <div class="icon" value="<%= element._id %>"><%= element.icon %></div>
                <div class="content">
                    <h5 class="sender"><%= element.sender %></h5>
                    <h6 class="title"><%= element.title %></h6>
                    <p>
                        <%= element.message %>
                    </p>
                </div>
            </div>
            <% }); %>

            <!-- Data List  All-->
        </div>
    </div>
</div>

<% include modal/modal %>
<% include layout/footer %>